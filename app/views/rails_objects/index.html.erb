<p id="notice"><%= notice %></p>

<h1>Listing Rails Objects</h1>

<div class="angularExample">
  <div class="scopeVariable">
    Hello
    <span ng-if="name" ng-bind="name"></span> !!!
  </div>
Enter your name: <input type="text" ng-model="name"><br/>
View the result Instantly! above. 
</div>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rails_objects.each do |rails_object| %>
      <tr>
        <td><%= rails_object.firstName %></td>
        <td><%= rails_object.lastName %></td>
        <td><%= rails_object.gender %></td>
        <td><%= link_to 'Show', rails_object %></td>
        <td><%= link_to 'Edit', edit_rails_object_path(rails_object) %></td>
        <td><%= link_to 'Destroy', rails_object, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

